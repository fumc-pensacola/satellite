{
  "env": {
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "superInFunctions": true,
    "templateStrings": true
  },
  "rules": {
    "block-scoped-var": 1,
    "brace-style": [1, "1tbs"],
    "camelcase": [1, {"properties": "always"}],
    "comma-dangle": 1,
    "comma-spacing": [1, {"before": false, "after": true}],
    "comma-style": [1, "last"],
    "curly": [2, "multi-line"],
    "eol-last": 1,
    "generator-star-spacing": [1, "after"],
    "guard-for-in": 1,
    "indent": [1, 2, {"VariableDeclarator": { "var": 2, "let": 2, "const": 3}}],
    "no-eq-null": 2,
    "no-extra-parens": 0,
    "no-lonely-if": 1,
    "no-mixed-requires": 0,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "no-shadow": 0,
    "no-spaced-func": 1,
    "no-throw-literal": 2,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-undef": 2,
    "no-unused-vars": [1, { "vars": "local", "args": "none" }],
    "no-var": 2,
    "quotes": [0, "double", "avoid-escape"],
    "radix": 1,
    "semi-spacing": [1, {"before": false, "after": true}],
    "strict": [0],
    "wrap-iife": 1
  }
}
